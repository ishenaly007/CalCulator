<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="base.Button" parent="Widget.MaterialComponents.Button">

        <item name="cornerRadius">200dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">80dp</item>
    </style>

    <style name="gray.Button" parent="base.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <style name="orange.Button" parent="base.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/orange</item>
    </style>

    <style name="Dark.gray.Button" parent="base.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/dark_gray</item>
    </style>
    <style name="BTN_2Base" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:iconTint">@drawable/ic_baseline_chevron_right_24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue20</item>
        <item name="cornerRadius">13dp</item>
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">60dp</item>
    </style>


</resources>